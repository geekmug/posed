<!DOCTYPE import-control PUBLIC
    "-//Puppy Crawl//DTD Import Control 1.3//EN"
    "http://checkstyle.sourceforge.net/dtds/import_control_1_3.dtd">
<import-control pkg=".*" regex="true" strategyOnMismatch="allowed">
  <!-- See https://github.com/google/guice/wiki/JSR330 -->
  <disallow class="com.google.inject.Inject" />
  <disallow class="com.google.inject.Named" />
  <disallow class="com.google.inject.BindingAnnotation" />
  <disallow class="com.google.inject.ScopeAnnotation" />
  <disallow class="com.google.inject.Singleton" />
  <disallow class="com.google.inject.Provider" />
</import-control>
